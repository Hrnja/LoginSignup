<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="100dp"
        android:backgroundTint="@color/white"
        >

        <TextView
                android:id="@+id/recName"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Name"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@drawable/textview_border"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
        />
        <TextView
                android:id="@+id/recUserName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="150dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/textview_border"
                android:textAlignment="center"
                android:textSize="25dp"
        />

        <TextView
                android:id="@+id/recLastName"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Lastname"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@drawable/textview_border"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="40dp"
                android:textAlignment="center"
        />
        <TextView
                android:id="@+id/recUserLastName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="150dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/textview_border"
                android:textAlignment="center"
                android:textSize="25dp"
        />

        <TextView
                android:id="@+id/recEmail"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Email"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@drawable/textview_border"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="80dp"
                android:textAlignment="center"
        />
        <TextView
                android:id="@+id/recUserEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="150dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/textview_border"
                android:textAlignment="center"
                android:textSize="20dp"
        />

        <TextView
                android:id="@+id/recPassword"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Password"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@drawable/textview_border"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="120dp"
                android:textAlignment="center"
        />
        <TextView
                android:id="@+id/recUserPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="150dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/textview_border"
                android:textAlignment="center"
                android:textSize="25dp"
        />

        <Button
                android:id="@+id/delete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="160dp"
                android:layout_marginLeft="0dp"
                android:background="@drawable/ic_baseline_delete_24"
                />



</androidx.cardview.widget.CardView>