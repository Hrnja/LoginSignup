<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".Login">

    <ImageView
            android:id="@+id/logo_id"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/kotlin_chatapp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/name_login"
            android:background="@drawable/editetext_background"
            android:layout_below="@+id/logo_id"
            android:paddingLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Name"
            android:textSize="20dp"
            android:textStyle="bold"
    />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_login"
            android:background="@drawable/editetext_background"
            android:paddingLeft="15dp"
            android:layout_below="@+id/name_login"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:hint="Password"
            android:textSize="20dp"
            android:textStyle="bold"
    />

    <Button
            android:id="@+id/button_login"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_login"
            android:text="Login"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="19dp"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
    />
    <TextView
            android:text="Not a memeber?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notMember"
            android:layout_below="@+id/button_login"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="80dp"
            android:textSize="20dp"
            android:textStyle="bold"
    />

    <TextView
            android:id="@+id/register_on_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_below="@+id/button_login"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/notMember"
            android:layout_marginStart="10dp"
            android:textSize="20dp"
            android:textColor="@color/green"
            android:textStyle="bold"
    />


</RelativeLayout>